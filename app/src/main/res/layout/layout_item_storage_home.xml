<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_storage_home"
    android:padding="16dp">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/ic_progress"
        android:layout_width="104dp"
        android:layout_height="104dp"
        app:cpb_background_progressbar_color="@color/blue_second"
        app:cpb_background_progressbar_width="24dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="100"
        app:cpb_progressbar_color="@color/blue_main"
        app:cpb_progressbar_width="24dp"
        app:cpb_round_border="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="0%"
        android:textColor="@color/monochrome_700"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_progress"
        app:layout_constraintEnd_toEndOf="@id/ic_progress"
        app:layout_constraintStart_toStartOf="@id/ic_progress"
        app:layout_constraintTop_toTopOf="@id/ic_progress" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/internal_storage"
        android:textColor="@color/monochrome_500"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/ic_progress"
        app:layout_constraintTop_toTopOf="@id/ic_progress"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/inter_semibold"
        android:text="..."
        android:textColor="@color/monochrome_700"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/ic_progress"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/view_details"
        android:textColor="@color/blue_main"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/ic_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/ic_progress"
        app:layout_constraintTop_toBottomOf="@+id/description" />
</androidx.constraintlayout.widget.ConstraintLayout>