<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/ic_progress"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cpb_background_progressbar_color="@color/blue_second"
        app:cpb_background_progressbar_width="32dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progress_max="100"
        app:cpb_progressbar_color="@color/blue_main"
        app:cpb_progressbar_width="32dp"
        app:cpb_round_border="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="0%"
        android:textColor="@color/monochrome_700"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_progress"
        app:layout_constraintEnd_toEndOf="@id/ic_progress"
        app:layout_constraintStart_toStartOf="@id/ic_progress"
        app:layout_constraintTop_toTopOf="@id/ic_progress" />

    <include
        android:id="@+id/used"
        layout="@layout/layout_size_storage_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/available"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_progress" />

    <include
        android:id="@+id/available"
        layout="@layout/layout_size_storage_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/total"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/used"
        app:layout_constraintTop_toBottomOf="@id/ic_progress" />

    <include
        android:id="@+id/total"
        layout="@layout/layout_size_storage_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/available"
        app:layout_constraintTop_toBottomOf="@id/ic_progress" />
</androidx.constraintlayout.widget.ConstraintLayout>