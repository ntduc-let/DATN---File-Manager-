<resources>
    <!-- Base application theme. -->
    <style name="Theme.BaseProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_main</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.BaseProject">
        <item name="colorPrimary">@color/blue_main</item>
    </style>

    <style name="TextAppearanceTabLayoutTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OfficeReaderScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/base_color</item>
        <item name="colorPrimaryDark">?attr/base_color</item>
        <item name="colorAccent">?attr/base_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>
        <item name="android:statusBarColor">?attr/base_color</item>
        <item name="base_color">@color/blue_main</item>
        <item name="colorControlHighlight">?attr/base_color</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="PDF" parent="OfficeReaderScreen">
        <item name="base_color">@color/pdf_color</item>
    </style>

    <style name="DOC" parent="OfficeReaderScreen">
        <item name="base_color">@color/doc_color</item>
    </style>

    <style name="PPT" parent="OfficeReaderScreen">
        <item name="base_color">@color/ppt_color</item>
    </style>

    <style name="XLS" parent="OfficeReaderScreen">
        <item name="base_color">@color/xls_color</item>
    </style>

    <style name="TXT" parent="OfficeReaderScreen">
        <item name="base_color">@color/txt_color</item>
    </style>

    <style name="ImageViewerScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="materialButtonStyle">@style/Widget.AppCompat.Button.ButtonBar.AlertDialog</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="TitleToolBar" >
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>